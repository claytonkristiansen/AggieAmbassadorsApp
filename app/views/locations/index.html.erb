<main>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <section class="page-info">
          <h1>Event Locations</h1>
          <h5>Manage where your events are hosted.</h5>
        </section>
        <section>
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @locations.each do |location| %>
                <tr>
                  <td><%= location.name %></td>
                  <td><%= link_to 'Details', location %></td>
                  <td><%= link_to 'Edit', edit_location_path(location) %></td>
                  <td><%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </section>
        <section>
          <%= link_to 'New Location', new_location_path %>
        </section>
      </div>
    </div>
  </div>
</main>
