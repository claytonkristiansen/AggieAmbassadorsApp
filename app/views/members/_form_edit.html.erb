<%= form_with(model: member) do |form| %>
    <% if member.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>
  
        <ul>
          <% member.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if is_owner? %>
      <div class="field">
        <%= form.label :privilege_level %>
        <%= form.select(:privilege_level, options_for_select([['Member', 10], ['Event Creator', 20], ['Owner', 30]])) %>
      </div>

      <div class="field">
        <%= form.label :position_title %>
        <%= form.text_field :position_title %>
      </div>
    <% end%>

    <% if session[:user_email] == member.email %>
      <div class="field">
        <%= form.label :preferred_name %>
        <%= form.text_field :preferred_name%>
      </div>

      <div class="field">
          <%= form.label :send_emails %>
          <%= form.check_box :send_emails %>
      </div>
    <% end%>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>  