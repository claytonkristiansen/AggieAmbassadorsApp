<main>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <section class="page-info">
          <h1>New Event</h1>
          <h5>Add a new event members can register for.</h5>
        </section>
        <section>
          <%= render 'form', event: @event %>
        </section>
        <section>
          <a class="btn btn-primary larger-btn" href="<%= events_path %>" role="button">Go back</a>
          <p>Return to the events list.</p>
        </section>
      </div>
    </div>
  </div>
</main>
